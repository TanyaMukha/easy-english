{
    "plugins": [
        "@ianvs/prettier-plugin-sort-imports"
    ],
    "importOrder": [
        "^react",
        "<THIRD_PARTY_MODULES>",
        "^@/components/(.*)$",
        "^@/hooks/(.*)$",
        "^@/utils/(.*)$",
        "",
        "^@/(.*)$",
        "^./(?!\\.).*$",
        "^../(?!\\.).*$",
        "^../../(?!\\.).*$",
        "^../../../(?!\\.).*$"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "importOrderParserPlugins": [
        "typescript",
        "jsx",
        "decorators-legacy"
    ]
}